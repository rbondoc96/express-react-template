<%
/**
 * @typedef {Object} UserSelect
 * @property {string} first_name
 */

/** @type {UserSelect} */
const user = locals.user;
/** @type {string */
const verifyUrl = locals.verifyUrl;
%>


<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Template</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="color-scheme" content="light">
        <meta name="supported-color-schemes" content="light">
        <style>
            @media only screen and (max-width: 600px) {
                .inner-body, .footer {
                    width: 100% !important;
                }
            }
            @media only screen and (max-width: 500px) {
                .button {
                    width: 100% !important;
                }
            }

            body, table, td, a, h1, p {
                box-sizing: border-box;
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Seoge UI Symbol';
                position: relative;
            }

            body {
                height: 100%;
                line-height: 1.4;
                margin: 0;
                padding: 0;
                width: 100% !important;
                -webkit-text-size-adjust: none;
                background-color: #FFF;
                color: #718096;
            }

            table {
                width: 100%;
            }

            a {
                text-decoration: none;
            }

            table.wrapper {
                background-color: #EDF2F7;
                margin: 0;
                padding: 0;
            }

            table.content {
                margin: 0;
                padding: 0;
                width: 100%;
            }

            td.header {
                padding: 25px 0;
                text-align: center;
            }

            td.header > a {
                color: #3D4852;
                font-size: 19px;
                font-weight: bold;
                display: inline-block;
            }

            td.body {
                background-color: #EDF2F7;
                margin: 0;
                padding: 0;
                width: 100%;
                border: hidden !important;
            }

            table.inner-body {
                background-color: #FFF;
                border-color: #E8E5EF;
                border-radius: 2px;
                border-width: 1px;
                box-shadow: 0 2px 0 rgba(0, 0, 150, 0.025), 2px 4px 0 rgba(0, 0, 150, 0.015);
                margin: 0 auto;
                padding: 0;
                width: 570px;
            }

            td.inner-content-cell {
                max-width: 100vw;
                padding: 32px;
            }
            td.inner-content-cell > h1 {
                color: #3D4852;
                font-size: 18px;
                font-weight: bold;
                margin-top: 0;
                text-align: left;
            }
            td.inner-content-cell > p {
                font-size: 16px;
                line-height: 1.5em;
                margin-top: 0;
                text-align: left;
            }

            table.action {
                margin: 30px auto;
                padding: 0;
                text-align: center;
                width: 100%;
                float: unset;
            }

            a.button {
                border-radius: 4px;
                display: inline-block;
                overflow: hidden;
                border-top-width: 8px;
                border-bottom-width: 8px;
                border-left-width: 18px;
                border-right-width: 18px;
                border-style: solid;
            }

            a.button-primary {
                color: #FFF;
                background-color: #2D3748;
                border-color: #2D3748;
            }

            table.subcopy {
                border-top: 1px solid #E8E4EF;
                margin-top: 25px;
                padding-top: 25px;
            }
            table.subcopy p {
                font-size: 14px;
            }
            table.subcopy p > span {
                word-break: break-all;
            }
            table.subcopy p > span > a {
                text-decoration: unset;
                color: #3869D4;
            }

            table.footer {
                margin: 0 auto;
                padding: 0;
                text-align: center;
                width: 570px;
            }
            table.footer .inner-content-cell > p {
                color: #B0ADC5;
                font-size: 12px;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <table class="wrapper" width="100%" cellpadding="0" cellspacing="0" role="presentation">
            <tbody>
                <tr>
                    <td align="center">
                        <table class="content" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                            <tbody>
                                <tr>
                                    <td class="header">
                                        <a href="http://localhost:5173" target="_blank" rel="noopener">
                                            ERT Project
                                        </a>
                                    </td>
                                </tr>
                                <!-- Email Body -->
                                <tr>
                                    <td class="body" width="100%">
                                        <table class="inner-body" align="center" width="520" cellpadding="0" cellspacing="0" role="presentation">
                                            <!-- Body Content -->
                                            <tbody>
                                                <tr>
                                                    <td class="inner-content-cell">
                                                        <h1>
                                                            Hello, <%= user.first_name %>!
                                                        </h1>
                                                        <p>
                                                            Please click the button below to verify your email address.
                                                        </p>
                                                        <table class="action" align="center" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                                                            <tbody>
                                                                <tr>
                                                                    <td align="center">
                                                                        <a class="button button-primary" href="<%= verifyUrl %>" target="_blank" rel="noopener">
                                                                            Verify Email Address
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <p>
                                                            If you did not create an account, no further action is required.
                                                        </p>
                                                        <p>
                                                            Regards,
                                                            <br>
                                                            ERT Project
                                                        </p>
                                                        <table class="subcopy" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                                                            <tbody>
                                                                <tr>
                                                                    <td>
                                                                        <p>
                                                                            If you're having trouble clicking the "Verify Email Address" button, copy and paste the URL below into your web browser:
                                                                            <span class="fallback-link">
                                                                                <a href="<%= verifyUrl %>" target="_blank" rel="noopener">
                                                                                    <%= verifyUrl %>
                                                                                </a>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <table class="footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
                                            <tbody>
                                                <tr>
                                                    <td class="inner-content-cell">
                                                        <p>
                                                            &copy; 2024 ERT Project. All rights reserved.
                                                        </p>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </body>
</html>

