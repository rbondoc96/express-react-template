{
    "extends": "../../tsconfig.base.json",
    "include": ["__mocks__", "__tests__", "kysely", "kysely.config.ts", "src"],
    "compilerOptions": {
        // Project Environment
        "lib": ["ES2021"],
        "paths": {
            "@/*": ["./src/*"],
            "@mocks/*": ["./__mocks__/*"],
            "@tests/*": ["./__tests__/*"]
        },
        "sourceMap": true,

        // General
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node"
    }
}
