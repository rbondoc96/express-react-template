{
    "name": "server",
    "type": "module",
    "private": true,
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "scripts": {
        "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "checks": "concurrently \"npm run stan\" \"npm run lint\" \"npm run format\" -n stan,lint,format -c red,green,blue",
        "deploy": "npm ci && npm run build",
        "dev": "tsx --watch ./src/index.ts",
        "format": "prettier \"**/*.ts\" --check",
        "format:fix": "prettier \"src/**/*.ts\" --write",
        "kysely": "kysely",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "start": "node dist/index.js",
        "stan": "tsc --noEmit --skipLibCheck",
        "test": "vitest --run"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.0.1",
        "kysely": "^0.27.4",
        "luxon": "^3.5.0",
        "nodemailer": "^6.9.16",
        "pg": "^8.13.1",
        "ulid": "^2.3.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/luxon": "^3.4.2",
        "@types/nodemailer": "^6.4.16",
        "@types/pg": "^8.11.10",
        "kysely-ctl": "^0.9.0",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.2"
    }
}
