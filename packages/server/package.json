{
    "name": "server",
    "type": "module",
    "private": true,
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "scripts": {
        "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "checks": "concurrently \"npm run stan\" \"npm run lint\" \"npm run format\" -n stan,lint,format -c red,green,blue",
        "deploy": "npm ci && npm run build",
        "dev": "tsx --watch src/server.ts",
        "format": "prettier \"**/*.ts\" --check",
        "format:fix": "prettier \"src/**/*.ts\" --write",
        "kysely": "kysely",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "migrate:up": "kysely migrate:up",
        "start": "node dist/server.js",
        "stan": "tsc --noEmit --skipLibCheck",
        "test": "vitest --run"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.0.1",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.27.4",
        "luxon": "^3.5.0",
        "pg": "^8.13.1",
        "swagger-ui-express": "^5.0.1",
        "ulid": "^2.3.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.2.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/luxon": "^3.4.2",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "@types/swagger-ui-express": "^4.1.7",
        "kysely-ctl": "^0.9.0",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.2"
    }
}
