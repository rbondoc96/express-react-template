{
    "extends": "../../tsconfig.base.json",
    "references": [{"path": "./tsconfig.node.json"}],
    "include": ["__tests__", "src", "tailwind.config.ts"],
    "compilerOptions": {
        // Project Environment
        "jsx": "react-jsx",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"]
        },

        // General
        "moduleResolution": "Bundler",

        // Build
        "outDir": "build",
    }
}
